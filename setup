#/bin/sh
#SESAME DESKTOP/APPLET SETUP
#u will b prompted for passphrase for keystore(ope_) and password(ses_) for SesameSign

cd $(dirname $0)

CLASSPATH=".:/usr/sesame/build/lib/jasperreports-3.6.0.jar:/usr/sesame/build/lib/mail.jar:/usr/sesame/build/lib/poi-3.2-FINAL-20081019.jar:/usr/sesame/build/lib/quaqua.jar:/usr/sesame/build/lib/oalnf.jar:/usr/sesame/build/lib/jl1.0.jar:/usr/sesame/build/lib/mysql-connector-java-5.1.13-bin.jar:/usr/sesame/build/lib/lucene-core-2.4.1.jar:/usr/sesame/build/lib/jtunestable.jar:"
#CLASSPATH=".:/usr/sesame/build/lib/mysql-connector-java-5.1.13-bin.jar:"
#CLASSPATH=".:/usr/sesame/build/lib/jasperreports-3.7.4.jar:/usr/sesame/build/lib/mail.jar:/usr/sesame/build/lib/poi-3.2-FINAL-20081019.jar:/usr/sesame/build/lib/quaqua.jar:/usr/sesame/build/lib/oalnf.jar:/usr/sesame/build/lib/jl1.0.jar:/usr/sesame/build/lib/lucene-core-2.4.1.jar:"
javac -classpath $CLASSPATH org/elegance/*.java
/usr/java/jdk1.6.0_26/bin/jar cmf libmanifest sesame.lib.jar org/elegance/*.class org/elegance/images

CLASSPATH=".:sesame.lib.jar:/usr/sesame/build/lib/liquidlnf.jar:/usr/sesame/build/lib/looks-2.2.2.jar:/usr/sesame/build/lib/oalnf.jar:/usr/sesame/build/lib/quaqua.jar:/usr/sesame/build/lib/jtunestable.jar:"
javac -classpath $CLASSPATH *.java
/usr/java/jdk1.6.0_26/bin/jar cmf manifest sesame.jar sesame.class

jarsigner -keystore /usr/sesame/build/lib/SesameSign sesame.lib.jar SesameSign
jarsigner -keystore /usr/sesame/build/lib/SesameSign sesame.jar SesameSign

#immutable flag
chattr +i /usr/sesame/systems/runtime.xml

cp sesame.lib.jar /opt/tomcat7/webapps.labs/kituo_fmp/launchpad/lib/ -f
cp sesame.jar /opt/tomcat7/webapps.labs/kituo_fmp/launchpad/lib/ -f

mv sesame.lib.jar /usr/sesame/build/sesame.lib.jar -f
mv sesame.jar /usr/sesame/build/sesame.jar -f

#testing here
#svn info
#svn status
#svn list
#echo -n "Type Message and press [ENTER]: "
#read var_message
#echo "Your commit message is: $var_message"
#echo -n "Press [ENTER] to continue,...: "
#read var_message
#echo "You can go on!...."


#COMMIT
export SVN_EDITOR=kwrite
#svn commit -m $var_message
svn commit
